// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
{
    "extends": "airbnb-base",
    "plugins": [
      "mocha"
    ],
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "indent": ["error", 4],
      "max-len": ["warn", 180],
      "no-plusplus": 0
    }
  }
